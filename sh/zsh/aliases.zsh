# help
alias help='run-help'

# navigation
alias -- -='cd -'
alias -g ...='../..'
alias -g ....='../../..'

# global aliases for common pipes and redirections
alias -g H='| head'
alias -g T='| tail'
alias -g G='| grep'
alias -g L="| less"
alias -g N="&> /dev/null"

# archive viewers (using unified als function)
alias -s 7z='als'
alias -s rar='als'
alias -s tar='als'
alias -s taz='als'
alias -s tbz='als'
alias -s tbz2='als'
alias -s tgz='als'
alias -s txz='als'
alias -s zip='als'
